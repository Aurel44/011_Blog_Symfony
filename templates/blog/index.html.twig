{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}

	{# {{ dump(articles)}} #}
	{% for article in articles %}
		<article>
			<h2>{{ article.title }}</h2>
			<div class="metadata">Ecrit le
				{{ article.createAt | date('d/m/Y') }}
				à
				{{ article.createAt | date('H:i:s') }}
				dans la catégorie Politique</div>
			<div class="content">
				<img src="{{ article.image }}" alt="{{ article.title }}" style="width:350px;height:250px">
				{{ article.content | raw }}
			</div>
			<div>
				<a href="{{ path('blog_show',{'id' : article.id }) }}" class="btn btn-primary">Lire la suite</a>
			</div>
			<hr>
		</article>
	{% endfor %}
{% endblock %}
